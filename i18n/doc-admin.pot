#. type: Content of: <section><section><section><section><para><screen>
#: en/content/customization/process-management.xml:2471
#, no-wrap
msgid ""
"Condition => {\n"
"    Type  => 'and',\n"
"    Cond1 => {\n"
"        Type   => 'and',\n"
"        Fields => {\n"
"            StateID => {\n"
"                Type  => 'String',\n"
"                Match => '1',\n"
"            },\n"
"            DynamicField_Marke => {\n"
"                Type  => 'String',\n"
"                Match => 'VW',\n"
"        },\n"
"    },\n"
"    Cond2 => {\n"
"        Type => 'and',\n"
"        Fields => {\n"
"            Queue => {\n"
